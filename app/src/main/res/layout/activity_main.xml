<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <!-- Header Card with App Branding -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- App Icon/Logo -->
<!--            <View-->
<!--                android:layout_width="64dp"-->
<!--                android:layout_height="64dp"-->
<!--                android:background="@drawable/app_icon_background"-->
<!--                android:layout_marginBottom="16dp"/>-->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/rock_clip"
                android:layout_marginBottom="16dp" />

            <!-- App Title -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UtilityBox"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="8dp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your smart on-screen toolbox"
                android:textSize="16sp"
                android:textColor="#5C6BC0"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.9"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Features Cards Container -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/debug_settings_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Features Section Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Features Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/accent_bar"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ¨ Key Features"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A237E"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <!-- Feature Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Capture Feature -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/feature_item_background"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="ðŸ“¸"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:background="@drawable/feature_icon_background"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Screen Capture"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A237E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Capture any region instantly"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:alpha="0.8"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- OCR Feature -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/feature_item_background"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="ðŸ”"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:background="@drawable/feature_icon_background"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Text Extraction"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A237E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="OCR from any screen region"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:alpha="0.8"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Clipboard Feature -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/feature_item_background"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="ðŸ“‹"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:background="@drawable/feature_icon_background"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Smart Clipboard"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A237E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="History of up to 20 items"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:alpha="0.8"/>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Quick Copy Feature -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/feature_item_background">

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="ðŸ”„"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:background="@drawable/feature_icon_background"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quick Actions"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A237E"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Copy and paste across apps"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:alpha="0.8"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Coming Soon Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#F8F9FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/coming_soon_bar"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš€ Coming Soon"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#5C6BC0"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ ðŸŒ Instant translation for extracted text\nâ€¢ ðŸ“ Save important snippets to notes\nâ€¢ ðŸŽ¨ Customizable floating interface"
                        android:textSize="14sp"
                        android:textColor="#7986CB"
                        android:lineSpacingExtra="6dp"
                        android:alpha="0.9"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFF8E1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/tips_bar"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Pro Tips"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#F57F17"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Works optimally on Android 13 and below. For best results, enable Gboard's clipboard alongside UtilityBox for maximum reliability."
                        android:textSize="14sp"
                        android:textColor="#F9A825"
                        android:lineSpacingExtra="4dp"
                        android:alpha="0.9"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <!-- Debug Settings Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/debug_settings_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F3E5F5"
        app:layout_constraintBottom_toTopOf="@id/action_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#8E24AA"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Debug Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#6A1B9A"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/feature_item_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save OCR Debug Images"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#6A1B9A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save captured regions for troubleshooting"
                        android:textSize="14sp"
                        android:textColor="#8E24AA"
                        android:alpha="0.8"/>

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_debug_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Action Button Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/action_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_start_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Overlay Widget"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/primary_button_background"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:elevation="0dp"
                android:stateListAnimator="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to activate your floating toolbox"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>